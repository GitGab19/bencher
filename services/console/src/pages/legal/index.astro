---
import { getCollection } from "astro:content";
import LegalLayout from "../../layouts/legal/LegalLayout.astro";

const pages = await getCollection("legal");
pages.sort((a, b) => a.data.sortOrder - b.data.sortOrder);
---

<LegalLayout title="Legal" heading="Bencher Legal">
  <ul>
    {
      pages.map((page) => (
        <li>
          <a href={`/legal/${page.slug}`}>{page.data.heading}</a>
        </li>
      ))
    }
  </ul>
</LegalLayout>
