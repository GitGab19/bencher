---
import { getCollection } from "astro:content";
import HeaderLayout from "../../layouts/HeaderLayout.astro";

const tutorial = await getCollection("tutorial");
tutorial.sort((a, b) => a.data.sortOrder - b.data.sortOrder);
---

<HeaderLayout title="Docs" heading="Bencher Docs">
  <ul>
    {
      tutorial.map((page) => (
        <li>
          <a href={`/docs/tutorial/${page.slug}`}>{page.data.heading}</a>
        </li>
      ))
    }
  </ul>
</HeaderLayout>
