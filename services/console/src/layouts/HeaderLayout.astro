---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  heading: string;
}

const { title, heading } = Astro.props;
---

<BaseLayout title={title}>
  <section class="section">
    <div class="container">
      <div class="columns is-mobile">
        <div class="column">
          <div class="content">
            <h1 class="title">{heading}</h1>
            <hr />
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
