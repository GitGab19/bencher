---
import BaseLayout from "../BaseLayout.astro";
import ConsoleNavbar from "../../components/site/navbar/ConsoleNavbar";
import Notification from "../../components/site/Notification";
import type { Params } from "astro";

interface Props {
  params: Params;
  title: string;
  suppressNotification?: boolean;
}

const { params, title, suppressNotification } = Astro.props;
---

<BaseLayout title={title}>
  <ConsoleNavbar client:only slot="navbar" params={params} />
  <div class="is-widescreen">
    <div class="columns is-reverse-mobile">
      <div class="columns">
        <div class="column is-narrow">
          <slot name="menu" />
        </div>
      </div>
      <div class="column is-10">
        <Notification client:only suppress={suppressNotification} />
        <section class="section">
          <div class="continer">
            <slot />
          </div>
        </section>
      </div>
    </div>
  </div>
</BaseLayout>
